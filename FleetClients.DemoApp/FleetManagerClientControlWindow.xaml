<Window x:Class="FleetClients.DemoApp.FleetManagerClientControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FleetClients.DemoApp"
        xmlns:fcControls="clr-namespace:FleetClients.Controls;assembly=FleetClients.Controls"
        mc:Ignorable="d"
        Title="Fleet Manager Client Control Host" Height="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1*" MinWidth="250"/>
        </Grid.ColumnDefinitions>
        <fcControls:FleetManagerClientControl x:Name="fleetManagerClientControl"/>
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>
        <WebBrowser Grid.Column="2" x:Name="webBrowser"/>
    </Grid>
</Window>
